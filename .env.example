# Next.js environment variables
NODE_ENV=development
NEXTAUTH_SECRET=your-super-secret-key
NEXTAUTH_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/astronautics
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/astronautics?retryWrites=true&w=majority

# Seed Secret (for production seeding)
SEED_SECRET=your-super-secret-seed-key

# File upload settings
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,video/mp4
UPLOAD_DIRECTORY=/app/public/uploads
